procedure TMainForm.Get1Click(Sender: TObject);
var
  I : Integer;
  nCount : Integer;
  szAccn : WideString;
begin
  FAccountList.Clear;
  nCount := MainForm.XASession1.GetAccountListCount;
  For I := 0 to nCount - 1 do
  begin
    szAccn := MainForm.XASession1.GetAccountList(I);
    If szAccn <> '' then
    begin
      FAccountList.Add( szAccn );
    End;
  end;
end;

